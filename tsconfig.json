
{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "lib": ["es6", "dom"],
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}